{% extends './layouts/layout.njk' %}

{% block pageTitle %}Update your details - {{ serviceName }} - GOV.UK{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/check-details",
	  attributes: { id: "back" }
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Update your details</h1>
    <p><a href="https://www.gov.uk/claim-rural-payments">Sign in to the Rural Payments service</a> to update your details.</p>

    {% if devMode %}
      {{ govukButton({
        text: "Simulate going to SFD and back",
        attributes: { id: "btnContinue" },
        href: sfdButtonLink,
        preventDoubleClick: true
      }) }}
    {% endif %}
  </div>
</div>
{% endblock %}