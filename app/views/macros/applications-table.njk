{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/pagination/macro.njk" import govukPagination %}

{% macro applicationsTable(model) %}
  {{ govukTable({
    attributes: {
      'data-module': 'moj-sortable-table'
    },
    firstCellIsHeader: false,
    head: [
      {
        text: "Ref"
      },
      {
        text: "Business"
      },
      {
        text: "SBI",
        attributes: {
          "aria-sort": "ascending"
        },
        format: "numeric"
      },
      {
        text: "Apply date",
        attributes: {
          "aria-sort": "none"
        },
        format: "date"
      },
      {
        text: "Status",
        attributes: {
          "aria-sort": "none"
        }
      },
      {
        text: "Details"
      }
    ],
    rows: model.applications
  }) }}
  {{ govukPagination({
    previous: model.previous,
    next: model.next,
    items: model.pages})
  }}
{% endmacro %}